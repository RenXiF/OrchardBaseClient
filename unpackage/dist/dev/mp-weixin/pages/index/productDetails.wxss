page {
  background-color: #F8F8F8;
}
.one_ck {
  background-color: #FFFFFF;
}
.detailstt {
  width: 100%;
  height: 100%;
}
.detailstt image {
  width: 100%;
  border-radius: 0;
}
.comment {
  width: 100%;
}
.comment_ck {
  margin-top: 30rpx;
}
.comment_ck_two image {
  width: 30%;
  margin-right: 20rpx;
}
.popup {
  padding: 30rpx;
}
.popup image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.popup .pop_cont .cont_item {
  margin-bottom: 30rpx;
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #a1a1a1;
  border-radius: 15rpx;
  border: 2rpx solid #f5f5f5;
}
.popup .pop_cont .cont_item.active {
  background-color: #ffa600;
  color: #ffffff;
}
.navigation {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  width: 100%;
  bottom: 0;
  margin-top: 100rpx;
  border: solid 2rpx #f2f2f2;
  background-color: #ffffff;
  padding: 16rpx 0;
  z-index: 999;
}
.navigation .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 20rpx;
}
.navigation .left .item {
  margin: 0 30rpx;
}
.navigation .left .item.car {
  text-align: center;
  position: relative;
}
.navigation .left .item.car .car-num {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.navigation .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navigation .right .btn {
  line-height: 66rpx;
  padding: 0 30rpx;
  border-radius: 36rpx;
  color: #ffffff;
}
.navigation .right .cart {
  background-color: #ed3f14;
  margin-right: 30rpx;
}
.navigation .right .buy {
  background-color: #ff7900;
}

