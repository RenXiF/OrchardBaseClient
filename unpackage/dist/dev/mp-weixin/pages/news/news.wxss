.dian {
  width: 10px;
  height: 10px;
  z-index: 9;
  position: relative;
  left: 70px;
  top: -27px;
  border-radius: 5px;
  background-color: #ff5500;
}
.news_block {
  max-width: 100%;
  padding: 0 15px;
  background-color: #FFFFFF;
}
.news_block .one_bk {
  width: 100%;
  padding: 10px 0;
  border-top: #F8F8F8 2px solid;
}
.news_block .one_bk .one_img {
  min-width: 20%;
  min-height: 50px;
}
.news_block .one_bk .one_img image {
  width: 80%;
  border-radius: 15px;
}
.news_block .one_bk .news_tit {
  width: 78%;
}
.news_block .one_bk .news_tit .tit {
  width: 100%;
  margin-bottom: 7px;
}
.news_block .one_bk .news_tit .tit .tit_z {
  font-size: 18px;
  font-weight: 700;
  color: #333333;
}
.news_block .one_bk .news_tit .tit .tit_f {
  font-size: 15px;
  color: #8f8f94;
}
.news_block .one_bk .news_tit .subtit {
  width: 90%;
}
.news_block .one_bk .news_tit .subtit text {
  font-size: 12px;
  color: #8f8f94;
}

